<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grocerymanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroceryManager">
        <activity android:name=".TutorialSteps"></activity>
        <activity android:name=".Notification_ON_time" />
        <activity android:name=".Register" />
        <activity android:name=".Login" />
        <activity android:name=".Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Lunch_activity" />

        <receiver android:name=".Notification_receiver_lunch" />

        <activity android:name=".Breakfast_activity" />

        <receiver android:name=".Notification_receiver_break" />

        <activity android:name=".Dinner_activity" />

        <receiver android:name=".Notification_receiver_Dinner" />
        <activity android:name=".DetailsRecipe"/>
        <activity android:name=".Recipe" />

    </application>

</manifest>